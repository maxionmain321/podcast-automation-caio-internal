# User login credentials
ADMIN_EMAIL=your-email@example.com
ADMIN_PASS=your-secure-password

# 🔐 Cloudflare R2 credentials
CLOUDFLARE_ACCOUNT_ID=your-account-id
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# 🪣 Bucket and endpoint
S3_BUCKET=your-bucket-name
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
S3_PUBLIC_URL=https://your-custom-domain.com

# n8n backend envs
N8N_GENERATE_WEBHOOK=https://your-n8n-instance/webhook/generate-webhook
N8N_PUBLISH_WEBHOOK=https://your-n8n-instance/webhook/publish-webhook
N8N_TRANSCRIBE_WEBHOOK=https://your-n8n-instance/webhook/transcribe-webhook
WEBHOOK_SECRET=your-webhook-secret

# 🔧 Other required envs
JWT_SECRET=your-jwt-secret
NEXT_PUBLIC_VERCEL_URL=http://localhost:3000
S3_REGION=auto
